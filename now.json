{
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.3.1"
    }
  },
  "rewrites": [
    { "source": "/favicon.ico", "destination": "https://juicy.vercel.app/favicon.ico" },
    { "source": "/(.*)", "destination": "/api/index.php" }
  ]
}

{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.3.1"
    }
  },
  "routes": [
    { "src": "/(.*)", "dest": "/api/$1" }
    { "src": "/favicon.ico", "dest": "https://juicy.vercel.app/favicon.ico" },
  ]
}